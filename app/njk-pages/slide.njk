{% for item in items %}
<div class="accessories__slide swiper-slide">
    <picture>
        <source srcset="img/accessories/accessories-{{ item.img }}.avif" type="image/avif">
        <source srcset="img/accessories/accessories-{{ item.img }}.webp" type="image/webp">
        <img class="accessories__slide-img" src="img/accessories/accessories-{{ item.img }}.jpg" alt="Alt text" loading="lazy">
    </picture>
    <a class="accessories__slide-title" href="#!">{{ item.name }}</a>
    <p class="accessories__slide-price">{{ item.price }}</p>
</div>
{% endfor %}
